desc
@/* File: corpse_save.h */

#define MAX_CORPSES	500

struct corpse_control_rec {
   int index;
   sh_int vnum;			/* vnum of this house		*/
   char name[EXDSCR_LENGTH];			/* name of corpse*/
   char description[EXDSCR_LENGTH];
   char short_description[EXDSCR_LENGTH];     /* short descrip*/
   int weight;
   long spare0;
   long spare1;
   long spare2;
   long spare3;
};

void	ccontrol_make_corpse(int vnum, struct obj_data *corpse);
void	Corpse_boot(void);
void	Corpse_crashsave(int index, struct obj_data *corpse);
@


